<div class="container p-3" style="max-height: 580px; overflow-y: scroll;">
    <form method="GET" action="/registros" class="form-inline mb-3">
        <input type="text" name="filtro" class="form-control mr-2" placeholder="Buscar por impresora..." value="{{filtro}}">
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>
    
    <!-- Tabla de mantenciones -->
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Impresora</th>
                <th>Material</th>
                <th>Tiempo</th>
                <th>Creado Hace</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each registros}}
            <tr>
                <td>{{username}}</td>
                <td>{{material}}</td>
                <td>{{tiempo}}</td>
                <td><time class="timeago" datetime="{{created_at}}">{{timeago created_at}}</time></td>
                <td>
                    <a href="/registros/delete/{{id}}" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este registro?');">Eliminar</a>
                    <a href="/registros/edit/{{id}}" class="btn btn-secondary">Editar</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>