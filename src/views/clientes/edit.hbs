<div class="container p-4"></div>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/clientes/edit/{{cliente.RUT}}" method="POST">
                    <div class="form group">
                        <input type="text" value="{{cliente.nombre}}"  class="form-control" name="nombre" placeholder="Nombre" autofocus>
                    </div>
                    <div class="form group">
                        <input type="text" value="{{cliente.email}}" name="email" class="form-control" placeholder="Email">
                    </div>
                        <button class="btn btn-success btn-block">
                            Guardar
                        </button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>