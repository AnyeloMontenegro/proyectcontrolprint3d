<div class="container p-3" style="max-height: 580px; overflow-y: scroll;">
    <form method="GET" action="/auth" class="form-inline mb-3">
            <input type="text" name="filtro" class="form-control mr-2" placeholder="Buscar usuarios..." value="{{filtro}}">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
        <!-- Tabla de impresoras -->
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{username}}</td>
                    <td>{{email}}</td>
                    <td>{{role}}</td>
                    <td>
                    <a href="/clientes/delete/{{RUT}}" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este cliente?');">Eliminar</a>
                    <a href="/clientes/edit/{{RUT}}" class="btn btn-secondary">Editar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>